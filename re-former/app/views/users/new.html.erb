<h3>Create a new User </h3>
<%= form_for @user do |f| %>
  <%= f.label "Username" %>
  <%= f.text_field :username, placeholder: "Your username here" %> <br/>
  <%= f.label "Password" %>
  <%= f.password_field :password, placeholder: "Your password here" %> <br/>
  <%= f.label "Email" %>
  <%= f.email_field :email, placeholder: "example@example.com" %> <br/>
  <%= f.submit %> <br/>
<% end %>
